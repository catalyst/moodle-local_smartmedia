{{!
    @template local_smartmedia/report-summary

    Report Summary template.

    Example context (json):
    {
        "total": "$5,123,456",
        "warnings": [
            {
                "message": "Total excludes high definition transcode costs: Could not obtain high definition transcode cost data for ap-southeast-2 region"
            }
        ]
    }
}}

    <div class="card">
        <h5 class="card-header">{{#str}} report:summary:transcodetotal, local_smartmedia {{/str}}</h5>
        <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">{{#str}} report:summary:cost:description, local_smartmedia {{/str}}</h6>
            <p class="card-text">{{#str}} report:summary:cost:total, local_smartmedia {{/str}} {{total}}</p>
        </div>
        {{#warnings}}
        <div class="alert alert-warning" role="alert">
            {{message}}
        </div>
        {{/warnings}}
    </div>

