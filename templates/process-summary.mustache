{{!
    @template local_smartmedia/report-summary

    Report Summary template.

    Example context (json):
    {
        "process_summary" : ""
    }
}}

<div class="card">
    <h5 class="card-header">{{#str}} report:summary:processsummary, local_smartmedia {{/str}}</h5>
    <div class="card-body">
        {{#process_summary}}
            <h6 class="card-subtitle mb-2 text-muted">{{#str}} report:processsummary:title, local_smartmedia {{/str}}</h6>
            {{{process_summary}}}
        {{/process_summary}}
        {{^process_summary}}
            <h2>
                {{#str}} report:summary:nodata, local_smartmedia {{/str}}
            </h2>
        {{/process_summary}}
    </div>
</div>

